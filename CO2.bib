Journal =JQSRT,
Year = {{2015}},
Volume = {{151}},
Pages = {88-96},
Abstract = {{An update of the former version of the database and software for the
   calculation of CO2-air absorption coefficients taking line-mixing into
   account {[}Lamouroux et al. J Quant Spectrosc Radiat Transf
