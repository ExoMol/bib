@article{10CoKePi,
Author = {Coxon, John A. and Kepa, Ryszard and Piotrowska, Izabela},
Title = {The A2Πi ∼
   X2Σ+ interaction in COP: Deperturbation
   analyses of B-A and A-X bands of
   12C16O+,
   13C16O+ and
   14C16O+},
Journal = {JOURNAL OF MOLECULAR SPECTROSCOPY},
Year = {2010},
Volume = {262},
Number = {2},
Pages = {107-121},
Month = {AUG},
Abstract = {The 1-0, 6-0 and 6-1 bands of the A(2)Pi(i) -> X-2 Sigma(+) system of
   (CO+)-C-13-O-16 and the 2-0 and 2-1 bands of the A(2)Pi(i) -> X-2
   Sigma(+) system of (CO+)-C-14-O-16 have been recorded at high resolution
   for the first time. The 0-2 and 5-0 bands of the A -> X system of
   (OO+)-O-12-O-16 have also been recorded at higher resolution than in
   previous work. The spectra were excited in an air-cooled hollow cathode
   discharge and photographed using a 2-m plane grating spectrograph. The
   spectral resolution and the Doppler-broadened line widths are both
   similar to 0.12 cm(-1), and the experimental measurement precision of
   resolved lines is similar to 0.02 cm(-1). The measured line positions,
   sometimes in combination with literature data on the B-2 Sigma(+) ->
   A(2)Pi(i); transition, have been employed in deperturbation analyses of
   level crossings in the near-degenerate A(0)similar to X(10) and
   A(5)similar to X(14) interactions in (CO+)-C-12-O-16, the A(1)similar to
   X(11) and A(6)similar to X(15) interactions in (CO+)-C-13-O-16 and the
   A(2)similar to X(12) interaction in (CO+)-C-14-O-16. No radial
   dependence of the electronic perturbation matrix elements H-SO(r) and
   H-RE(r) could be detected over the narrow range of r-centroids
   (1.477-1.501 angstrom), and the mean values of these parameters are H-SO
   = -49.06(15) cm(-1) and H-RE = 0.211(2). Using iteratively improved RKR
   potentials and FC-overlap integrals, the mean H-SO and H-RE were
   employed in least-squares analyses of A -> X literature data involving
   A(D) levels of the three isotopologues that are affected by interactions
   with one or two distant X(if) levels. The fitted parameters of the
   A(2)Pi(i), state (B-D, A(D), A(DDs) p(D), q(D)) exhibit D-dependences
   that are much smoother than those employing perturbed parameters
   determined in previous investigations. In addition, a significant
   electronic isotope effect has been characterized. The separations
   T-e(A)-T-e(X) of the minima of the A and X states of (CO+)-C-13-O-16 and
   (CO+)-C-14-O-16 are less than that of (CO+)-C-12-O-16 by 0.39 and 0.73
   cm(-1), respectively. Although Born-Oppenheimer breakdown of this
   magnitude is surprising, it is similar to that found for the B2 Sigma+
   state of CO+. (C) 2010 Elsevier Inc. All rights reserved.},
DOI = {10.1016/j.jms.2010.06.001},
ISSN = {0022-2852},
Unique-ID = {WOS:000280930600008},
}

