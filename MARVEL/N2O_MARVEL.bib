@article{99MoYaMa,
Author = {Morino, I. and Yamada, K. M. T. and Maki, A. G.},
Title = {{Terahertz measurements of rotational transitions in vibrationally
   excited states of N$_2$O}},
Journal = JMS,
Year = {{1999}},
Volume = {{196}},
Pages = {131-138},
Abstract = {{We have measured and analyzed rotational transitions of N2O in the
   following vibrational states, 01(1e,f)0, 02(0.2e,f)0, 03(1,3e,f)0,
   00(0)1, 01(1e,f)1, and 10(0)0. The NAIR terahertz spectrometer was used
   to measure the frequencies of transitions in the range J = 25 <-- 24 to
   J = 31 <-- 30 with accuracies of +/-0.020 MHz in most cases. These
   measurements were fit, along with other microwave and infrared
   measurements involving the same states, to obtain improved rovibrational
   term values for those vibrational states. It is shown that the
   measurements can be fit with fewer constants if both l-type resonance
   and the Fermi resonance among the levels 00(0)1 and 02(0,2)0 or 01(1)1
   and 03(1,3)0 are included in the least-squares fit. These measurements
   also contribute to improving the N2O wavenumber calibration standards
   for the infrared region. }},
DOI = {10.1006/jmsp.1999.7855},
}


@article{98BoHaBlWa,
Author = {Bouanich, J P and Hartmann, J M and Blanquet, G and Walrand, J and
   Bermejo, D and Domenech, J L},
Title = {{Line-mixing effects in He- and N$_2$-broadened $\Sigma \leftrightarrow \Pi$ infrared Q
   branches of N$_2$O}},
Journal = JCP,
Year = {1998},
Volume = {109},
Pages = {6684-6690},
Abstract = {{Two Q branches of N2O near 579.3 and 2798 cm(-1) belonging to the 2
   nu(2)(0e) - v(2)(1)f and nu(2) + nu(3) bonds, respectively, of
   Sigma<--Pi and Pi<--Sigma symmetry, have been studied for He and N-2
   pertubers at pressures ranging from 0.1 to 2 atm, using a tunable diode
   laser and a difference-frequency laser spectrometer. To interpret the
   line-mixing effects in these spectra, we have applied a model based on
   the energy corrected sudden approximation whose parameters have been
   only derived from Line-broadening data for N2O-He and also from the
   measured absorption by the Q branches for N2O-N-2. This model provides a
   satisfactory agreement with experimental band shapes, whatever the band,
   the perturber and the pressure considered. Significantly larger
   line-mixing effects are shown for N2O-He with respect to N2O-N-2.
   Finally, the assumption made in the calculations to treat separately the
   couplings in the even and odd j levels appears to have a negligible
   influence on the resulting band shapes.}},
DOI = {10.1063/1.477318}}

