}

@article{04ViCiWeDr,
Author = {Vitcu, A. and Ciurylo, R. and Wehr, R. and Drummond, J. R. and May, A. D.},
Title = {Broadening, shifting, and line mixing in the $03^10 \leftarrow 01^10$
         parallel {Q branch of N$_2$O}},
Journal = JMS,
Year = {{2004}},
Volume = {{226}},
Pages = {71-80},
Abstract = {{The 03(1)0 <-- 01(1)0 Parallel Q branch of N2O has been studied at 297 K
   and over the pressure range 1-130 torr. Absorption spectra were recorded
   using a high resolution (1.5 MHz or 5 x 10(-5) cm(-1)) and high
   signal-to-noise (>3500:1) mid-infrared spectrometer based on
   difference-frequency infrared generation in AgGaS2. In the low-pressure
   range (1-11 tort) we obtained accurate values for the line strengths,
   the broadening coefficients, the weak mixing coefficients, and the
   overall shifting of the branch. The medium pressure results, ranging
   from 23 to 130 torr, were analyzed by treating the band as a whole,
   using a relaxation matrix formalism, based on an energy gap scaling law.
   We find, effectively, that only 36\% of the rotationally inelastic
   collisions are associated with Q branch mixing, the rest presumably
   being associated with Q-P and Q R mixing in the same vibrational band.
   The pressure shifting coefficient of the 03(1)0 <-- 01(1)0 Q branch as a
   whole was also determined and found to be 5.8 x 10(-3) cm(-1)/atm
   towards lower frequencies. }},
DOI = {10.1016/j.jms.2004.03.017}}

@article{04BeCaPeTa,
Author = {Bertseva, E and Campargue, A and Perevalov, V I and Tashkun, S A},
Title = {{New observations of weak overtone transitions of N$_2$O by ICLAS-VeCSEL
   near 1.07 $\mu$m}},
Journal = JMS,
Year = {{2004}},
Volume = {{226}},
Pages = {196-200},
Abstract = {{We have completed our investigations of the weak overtone transitions of
   nitrous oxide near 1.05 mum by the study of the 9090-9560 cm(-1) region
   by intracavity laser absorption spectroscopy (ICLAS) using a vertical
   external cavity surface emitting laser (VeCSEL). Eight bands were
   rotationally analyzed. Two hot bands are newly observed while the
   rotational analysis of the six cold bands has been improved. This Note
   includes the correction of a few misprints in the rovibrational
   parameters and the reconsideration of the analysis of an interpolyad
   Coriolis interaction system given in our previous contribution {[}J.
   Mol. Spectrosc. 220 (2003) 80]. }},
DOI = {10.1016/j.jms.2004.03.021},
}

@article{04FuAoWa,
Author = {Fukabori, M. and Aoki, T. and Watanabe, T.},
Title = {{Measurements of the line strengths, N$_2$- and O$_2$-broadened half-widths
   in the $\nu_3, \nu_1+2\nu_2$ and $2\nu_1$ bands of $^{14}$N$_2$$^{16}$O at room
   temperature}},
Journal = MP,
Year = {{2004}},
Volume = {{102}},
Pages = {811-818},
Abstract = {{The line strengths, N-2- and O-2-broadened half-widths in the nu(3),
   nu(1)+2nu(2) and 2nu(1) bands of N-14, O-16 were determined from spectra
   obtained by a high-resolution Fourier transform spectrometer at room
   temperature. The squared vibrational transition dipole moments and the
   coefficients of the Herman-Wallis factor were also determined for these
   bands. The squared vibrational transition dipole moments for these bands
   agreed with the values of HITRAN and high-resolution experiments within
   6\%. The N-2- and O-2-broadened half-widths were in agreement with the
   results of recent high-resolution experiments. The air-broadened
   half-widths were calculated using the smoothed N-2- and O-2-broadened
   half-widths and compared with the compiled values in the HITRAN
   database.}},
DOI = {10.1080/00268970410001725710},
}

@article{ 04NeSuVa,
Author = {Nemtchinov, V and Sun, C B and Varanasi, P},
Title = {{Measurements of line intensities and line widths in the
   $\nu_3$-fundamental band of nitrous oxide at atmospheric temperatures}},
Journal =JQSRT,
Year = {{2004}},
Volume = {{83}},
Pages = {267-284},
Abstract = {{We present measurements of the absolute intensities, N-2-, O-2-, and
   air-broadened half-widths of spectral lines in the 4.5 mum (v(3)
   -fundamental) band of (N2O)-N-14-O-16 at 216, 250 and 296 K. These data
   were obtained using a high-resolution (0.002 cm(-1)) Fourier-transform
   spectrometer. The variation of the line widths with temperature and the
   rotational quantum number m (\textbackslash{}m\textbackslash{} is J in
   the P-branch and J + 1 in the R-branch, with J being the rotational
   quantum number of a linear molecule) is examined. Simple empirical
   polynomial (quartic) fits of the measured half-widths are presented. A
   new improved method of extrapolation of line-width data to higher values
   of m has also been devised. }},
DOI = {10.1016/S0022-4073(02)00355-2},
}

