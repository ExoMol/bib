Title = {{l-Resonance intensity effects and pressure broadening of N$_2$O
          at 17 $\mu$m}},
Journal = JMS,
Year = {1996},
Volume = {177},
Pages = {211-220},
Abstract = {{intensities of PR branch transitions in the three hotbands 2 nu(2)(2f)
   <-- nu(2)(1f), 2 nu(2)(2e) <-- nu(2)(1e), and 2 nu(2)(0e) <-- nu(2)(1e)
