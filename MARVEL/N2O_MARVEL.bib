@article{24SiSeEmMa,
title = {{LED-based Fourier transform spectroscopy of $^{14}$N$_2\,^{16}$O in the 9750-12000 cm$^{-1}$ region}},
journal = JQSRT,
pages = {108888},
year = {2024},
Volume = {315}, 
doi = {10.1016/j.jqsrt.2023.108888},
author = {L. N. Sinitsa and V. I. Serdyukov and N. M. Emelyanov and A. A. Marinina and V. I. Perevalov},
