@article{49Smith.C2H6,
Author = {Smith, L. G.},
Title = {{The infra-red spectrum of C2H6}},
Journal = JCP,
Year = {1949},
Volume = {17},
Pages = {139-167},
abstract = {The infrared spectrum of C2H6 gas has been studied in the region
between 1.6 and 13 with a spectrometer of high resolving power. From measurements
on four resolved  bands the value IB0 = (42.2340.011)1040 g cm2 has been obtained
for the large moment of inertia in the ground state. From measurements on the three
