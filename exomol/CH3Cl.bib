@Article{99Law.CH3Cl,
Author = {Law, M. M.},
Title = {{Joint local- and normal-mode studies of the overtone spectra of the methyl halides:
{CH}$_{3}${F}, {CH}$_{3}${Cl}, {CH}$_{3}${Br}, {CD}$_{3}${Br}, and {CH}$_{3}${I}}},
