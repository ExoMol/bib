@Article{98ScAlSc.CH3Cl,
Author = {Cs{\'{a}}sz{\'{a}}r, A. G. and Allen, W. D. and Schaefer III, H. F.},
Title = {{In pursuit of the ab initio limit for conformational energy prototypes}},
Journal = JCP,
Year = {1998},
Volume = {108},
Number = {23},
Pages = {9751-9764},
Abstract = {The convergence of ab initio predictions to the one- and n-particle
limits has been systematically explored for several conformational energy prototypes:
the inversion barriers of ammonia, water, and isocyanic acid, the torsional barrier
of ethane, the E/Z rotamer separation of formic acid, and the barrier to linearity
