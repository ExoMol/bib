@article{ 08Nixxxx.CH3Cl,
Author = {Nikitin, Andrei Vladimirovich},
Title = {Vibrational energy levels of methyl chloride calculated from full
   dimensional ab initio potential energy surface},
Journal = JMS,
Year = {2008},
Volume = {252},
Number = {1},
Pages = {17-21},
Month = {NOV},
Abstract = {The vibrational levels for two isotopic species of methyl chloride have
   been calculated in the region 03500 cm(-1) from the ab initio potential
   energy surface (PES). The isotopic shift of vibrational levels of
   molecules (CH3Cl)-C-12-Cl-35 and (CH3Cl)-C-12-Cl-37 has been calculated.
   The correlation consistent basis sets cc-pVTZ and cc-pVQZ are employed
   to calculate energy values for 7957 and 3758 points correspondingly from
   a large domain of the nine-dimensional internal coordinate space. The
   analytic global PES is fitted with the standard deviation of 4.5 cm(-1).
   (C) 2008 Elsevier Inc. All rights reserved.},
DOI = {10.1016/j.jms.2008.06.001},
ISSN = {0022-2852},
Times-Cited = {10},
Journal-ISO = {J. Mol. Spectrosc.},
}

@article{ 16LuGoxx.CH3Cl,
Author = {Lucchesini, A. and Gozzini, S.},
Title = {{Diode laser spectroscopy of methyl chloride overtones at 850-860 nm}},
Journal =JQSRT,
Year = {{2016}},
Volume = {{168}},
Pages = {170-175},
Abstract = {{By using a tunable diode laser (TDL) spectrometer 156 CH3Cl overtone
   absorption lines have been detected in the range between 11,590 and
   11,760 cm(-1) (8500-8625 angstrom). Their strengths range around
   10(-26)-10(-27) cm/molecule and have been measured by utilizing
   commercial AlGaAs/GaAs laser diodes through the wavelength modulation
   spectroscopy (WMS) and the 2nd harmonic (2j) detection techniques. For
   one line the self-broadening coefficient has been obtained. (C) 2015
   Elsevier Ltd. All rights reserved.}},
DOI = {{10.1016/j.jqsrt.2015.09.010}}}




