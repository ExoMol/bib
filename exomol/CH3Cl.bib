@Article{13DuLaBu.CH3Cl,
Author = {Dudaryonok, A. S. and Lavrentieva, N. N. and Buldyreva, J. V.},
Title = {{{CH}$_{3}${Cl} self-broadening coefficients and their temperature dependence}},
Journal = JQSRT,
Year = {2013},
Pages = {321-326},
Volume = {130},
Abstract = {{CH335Cl} self-broadening coefficients at various temperatures of
atmospheric interest are computed by a semi-empirical method particularly suitable
for molecular systems with strong dipole-dipole interactions. In order to probe
the dependence on the rotational number K, the model parameters are adjusted on
extensive room-temperature measurements for K$\le$7 and allow reproducing fine
features of J-dependences observed for K$\le$3; for higher K up to 20, the fitting
is performed on specially calculated semi-classical values. The temperature exponents
for the standard power law are extracted and validated by calculation of low-temperature
self-broadening coefficients comparing very favorably with available experimental data.
An extensive line-list of self-broadening coefficients at the reference temperature 296 K
and associated temperature exponents for 0$\le$Jï¿½$\le$70, 0$\le$Kï¿½$\le$20 is provided
as Supplementary material for their use in atmospheric applications and spectroscopic databases.},
