}

@article{93Margolis.CH4,
author = {Margolis, J. S.},
title = {Hydrogen broadening and collision-induced line shifts of methane at 4200 cm-1},
journal = JQSRT,
year = {1993},
volume = {49},
pages = {71-79},
abstract = {Many of the lines of the nu1 + nu4 and nu3 + nu4 bands of methane in the
   vicinity of 4200 cm - 1 have been assigned and are reported in the
   HITRAN data-base which is commonly used for atmospheric transmission
   calculations in the i.r. In this paper, the collision-induced broadening
   coefficients of hydrogen for more than 200 of these lines are reported.
   Also, by using the water-vapor lines which occur in the spectra as
   calibration marks, the frequencies of the broadened lines were
   determined. This permitted the collision-induced line shifts to be
   measured for lines sufficiently isolated from interfering blends: all of
   the shifts which could be reliably determined in this way were negative.},
doi = {10.1016/0022-4073(93)90019-E}
}

@article{93SaThCa.CH4,
