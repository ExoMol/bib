@article{24FaBuGa.CH4,
Author = {Faherty, Jacqueline K. and Burningham, Ben and Gagne, Jonathan and
   Suarez, Genaro and Vos, Johanna M. and Merchan, Sherelyn Alejandro and
   Morley, Caroline V. and Rowland, Melanie and Lacy, Brianna and Kiman,
   Rocio and Caselden, Dan and Kirkpatrick, J. Davy and Meisner, Aaron and
