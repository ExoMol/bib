@article{98GeHeHi.CH4,
author = {Georges, R. and Herman, M. and Hilico, J. C. and Robert, O.},
title = {{High-resolution FTIR spectroscopy using a jet: Sampling the rovibrational
	spectrum of (CH4)-C-12}},
journal = JMS,
year = {1998},
volume = {187},
pages = {13-20},
abstract = {We have recorded high-resolution absorption spectra of (CH4)-C-12
	cooled in a jet, using a Fourier transform interferometer. The expected
	nuclear spin symmetry conservation in the jet is exhibited from data
	recorded around 3000 cm(-1) showing the relative intensity of the
	lines starting from the J `` = 2 para and ortho levels. Spectra recorded
	around 4300 cm(-1) are used to validate existing rovibrational parameters.
	Spectra recorded around 6000 cm(-1) allow new rovibrational assignments
	to be performed in the N = 4 polyad. In particular, lines in the
