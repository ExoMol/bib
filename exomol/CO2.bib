@article{21GuTeDo.CO2,
author = {Ruimin Guo and Junheng Teng and Hewei Dong and Tiqiang Zhang and Dong Li
and Defa Wang},
title = {{Line parameters of the P-branch of (30012) - (00001) $^{12}$C$^{16}$O$_2$ band
measured by comb-assisted, Pound-Drever-Hall locked cavity ring-down spectrometer}},
journal = JQSRT,
year = {2021},
volume = {264},
pages = {107555},
abstract = {This article presents an accurate measurement of line parameters for
