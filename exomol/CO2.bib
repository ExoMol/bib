Title = {{Water, methane, and carbon dioxide present in the dayside spectrum of
   the exoplanet {HD 209458b}}},
Journal = ApJ,
Year = {2009},
Volume = {704},
Pages = {1616-1621},
Abstract = {Using the NICMOS instrument on the Hubble Space Telescope, we have
