@article{ 05BuDuBa.CrH, 
Author = {Burrows, A. and Dulick, M. and Bauschlicher, C. W. and Bernath, P. F. and Ram,
   R. S. and Sharp, C. M. and Milsom, J. A.},
Title = {Spectroscopic constants, abundances, and opacities of the TiH molecule},
Journal = APJ,
Year = {2005},
Volume = {624},
Pages = {988-1002},
Abstract = {Using previous measurements and quantum chemical calculations to derive
   the molecular properties of the TiH molecule, we obtain new values for
   its rovibrational constants, thermochemical data, spectral line lists,
   line strengths, and absorption opacities. Furthermore, we calculate the
   abundance of TiH in M and L dwarf atmospheres and conclude that it is
   much higher than previously thought. We find that the TiH/TiO ratio
   increases strongly with decreasing metallicity, and at high temperatures
   can exceed unity. We suggest that, particularly for subdwarf L and M
   dwarfs, spectral features of TiH near \&SIM; 0.52 and 0.94 \&mu; m and
   in the H band may be more easily measurable than heretofore thought. The
   recent possible identification in the L subdwarf 2MASS J0532 of the 0.94
   \&mu; m feature of TiH is in keeping with this expectation. We speculate
   that looking for TiH in other dwarfs and subdwarfs will shed light on
   the distinctive titanium chemistry of the atmospheres of substellar-mass
   objects and the dimmest stars.},
DOI = {10.1086/429366}}

@article{ 05ShBrMo.CrH,
Author = {Shin, S and Brugh, D J and Morse, M D},
Title = {Radiative lifetime of the v=0, 1 levels of the $A^6\Sigma^+$ state of CrH},
Journal = ApJ,
Year = {2005},
Volume = {619},
Pages = {407-411},
Abstract = {The time-delayed resonant two-photon ionization method has been used to
