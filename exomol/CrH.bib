   not stable.},
Journal = {Acta Phys. Sin.},
}

@article{ 06ChMeRi.CrH,
Author = {Chowdhury, P K and Merer, A J and Rixon, S J and Bernath, P F and Ram, R S},
Title = {{Low-N lines of the A $^6\Sigma^+$ - X $^6\Sigma^+$ (1,0) band of CrH}},
