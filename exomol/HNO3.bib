@article{ 96PaCoGo.HNO3,
Author = {Paulse, C D and Coudert, L H and Goyette, T M and Crownover, R L and
   Helminger, P and {De Lucia}, F C},
Title = {Torsional splitting in the nu(9) band of nitric acid},
Journal = JMS,
Year = {1996},
Volume = {177},
Pages = {9-18},
Abstract = {A wide variety of microwave transitions within the v(9) = 1 vibrational
   state of nitric acid have been measured in the millimeter/submillimeter
   region. Torsional splittings on the order of 2.5 MHz have been observed
   and are due to the fact that the v(9) mode is a large amplitude
   torsional-type motion. Using an internal-axis-method-like formalism, an
   approach was developed to account for the effects of this large
   amplitude motion and was afterward applied to the analysis of the
   microwave frequencies. The model. fits the data to within experimental
   accuracy, and provides quantitative predictions of relative transition
   intensities.},
