DOI = {10.1021/jp980811d},
Journal-ISO = {J. Phys. Chem. A},
}

@article{ 98Pexxxx.HNO3,
Author = {Perrin, A},
Title = {Recent progress in the analysis of HNO3 spectra},
Journal = SCAA,
Year = {1998},
Volume = {54},
Pages = {375-393},
Abstract = {Numerous studies of HNO3 spectra have been performed recently in the
