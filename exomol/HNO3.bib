@article{ 96WaLoTa.HNO3,
Author = {Wang, W F and Looi, E C and Tan, T L and Ong, P P},
Title = {Line intensities in the nu(8) band of HNO3},
Journal = JMS,
Year = {1996},
Volume = {178},
Pages = {22-30},
Abstract = {Line intensity measurements have been made on the nu(8) band of HNO3
   using a high-resolution Fourier transform infrared spectrum in the
   region 739-800 cm(-1). A least-squares fit of a total of 710 line
   intensities in the P and R branches was performed, leading to accurate
   determination of five dipole moment operator constants. By utilizing
