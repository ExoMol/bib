DOI = {10.1006/jmsp.1998.7630},
Journal-ISO = {J. Mol. Spectrosc.},
}

@article{ 98DoOrAm.HNO3,
Author = {Donaldson, D J and Orlando, J J and Amann, S and Tyndall, G S and Proos, R J
   and Henry, B R and Vaida, V},
Title = {Absolute intensities of nitric acid overtones},
Journal = JPCA,
Year = {1998},
Volume = {102},
Pages = {5171-5174},
Abstract = {The absolute absorption cross sections for the Delta upsilon = 3 and
   Delta upsilon = 4 OH local mode transitions in room-temperature,
   gas-phase nitric acid have been measured and calculated ab initio. The
   measured {[}calculated at the QCISD/6-31 + G(d,p) level] oscillator
