@article{ 98KePeFl.HNO3,
Author = {Keller, F and Perrin, A and Flaud, J M and Johns, J W C and Lu, Z and Looi,
   E C},
Title = {High-resolution analysis of the nu(6), nu(7), nu(8), and nu(9) bands of
   (HNO3)-N-15-O-16 measured by Fourier transform spectroscopy},
Journal = JMS,
Year = {1998},
Volume = {191},
Pages = {306-310},
Abstract = {The analysis of the nu(6), nu(7), nu(8), and nu(9) bands of
   (HNO3)-N-15-O-16 located at 646.9641, 578.4719, 743.6166, and 458.2917
