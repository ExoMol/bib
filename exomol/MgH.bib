@article{ 99RaRaxx.MgH,
Author = {Rao, D M and Rangarajan, K E},
Title = {Molecular line polarization in the solar atmosphere: MgH lines},
Journal = ApJ,
Year = {1999},
Volume = {524},
Pages = {L139-L142},
Abstract = {The polarimetric observations of the quiet Sun show linear polarization
   in molecular lines of C-2, MgH, etc. The molecular lines are very faint
   in the intensity spectrum. We propose that the polarization is caused by
   coherent scattering processes in the solar atmosphere as in the case of
   atomic lines. The intensity and polarization profiles of MgH lines are
   calculated using the quiet-Sun model by Vernazza, Avrett, \& Loeser.
   This procedure allows us to estimate the oscillator strengths (f), the
   inelastic collisional rates (Gamma(l)), and the depolarizing elastic
   collision rates (D-(2)) for the molecular line transitions in the solar
   atmosphere. It is found that for the line lambda 5165.933, f = 0.04,
   Gamma(l) = 1.85 x 10(7) s(-1), and D-(2) = 9.52 x 10(6) s(-1). The line
   lambda 5168.147 fits the observations for f = 0.05, Gamma(l) = 2.91 x
   10(7) s(-1), and D-(2) = 3.69 x 10(7) s(-1).},
DOI = {10.1086/312312},
Journal-ISO = {Astrophys. J.},
}

@article{ 99WaHiLi.MgH,
Author = {Wallace, L and Hinkle, K and Li, G and Bernath, P},
Title = {The MgHB ` (2)Sigma(+)-x (2)Sigma(+) transition: A new tool for studying
   magnesium isotope abundances},
Journal = ApJ,
Year = {1999},
Volume = {524},
Pages = {454-461},
Abstract = {We have identified lines from the 0-3, 0-4, 0-5, 0-6, 0-7, 1-3, 1-4,
   1-7, and 1-8 bands of the (MgH)-Mg-24 B' (2)Sigma(+)-X (2)Sigma(+)
