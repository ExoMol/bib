@article{91IpCrFi.MgO,
author = {Ip, P. C.F. and Cross, K. J. and Field, R. W. and Rostas, J. and Bourguignon, B.
and McCombie, J.},
Title = {{The B1$\Sigma$+-a3$\Pi$i and D1$\Delta$-a3$\Pi$1 intercombination systems
of the MgO molecule}},
Journal = JMS,
Year = {1991},
Volume = {146},
Pages = {409-436},
