}


@article{89ThKlPe.MgO,
author = {Thommel, Helmar and Klotz, Rainer and Peyerimhoff, Sigrid D.},
title = {{The electronic structure of the MgO molecule in ground and excited states}},
journal = CPL,
year = {1989},
volume = {129},
pages = {417-430},
abstract = {Potential curves for the ground and various excited states of the
MgO molecule have been calculated using the multi-reference configuration interaction
