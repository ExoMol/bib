@article{86BoRoTa.MgO,
author = {Bourguignon, Bernard and Rostas, Joelle and Taieb, Guy and Gargoura, Mohammed-Ali
and McCombie, June},
title = {{Internal energy distribution in MgO(a3$\Pi$): A case of population inversion}},
