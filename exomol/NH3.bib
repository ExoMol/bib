@article{02RaMiPe.NH3,
Author = {Rajam\"{a}ki, T. and Miani, A. and Pesonen, J. and Halonen, L.},
Title = {{Six-dimensional variational calculations for vibrational energy levels
   of ammonia and its isotopomers}},
Journal = CPL,
Year = {2002},
Volume = {363},
Pages = {226-232},
Abstract = {Results of six-dimensional variational calculations of vibrational
   energy levels are presented for ammonia using a Hamiltonian expressed in
   curvilinear internal bond coordinates. A two-dimensional potential
   energy surface, which was introduced in a preliminary study on the
   inversion motion, is combined with a surface by Martin et al. Both
