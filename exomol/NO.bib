@article{81DrMixx.NO,
author = {Dressler, K. and Miescher, E.},
title = {{On highly excited electronic states of the NO molecule reached by multiphoton
spectroscopy}},
journal = JCP,
year = {1981},
volume = {75},
pages = {4310-4316},
abstract = {A recent multiphoton experiment by Wallace and Innes involves an energy level of
 the NO molecule that belongs to a very interesting sequence of rovibronic states
 in which an np Rydberg complex (C 2$\Pi$+D 2∑+, v = 6) and a regular and inverted
 valence state (B 2$\Pi$r, v = 24 and L 2$\Pi$i, v = 5) are strongly mixed with each other.
