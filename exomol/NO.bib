title = {{Low-lying valence and Rydberg states of nitric-oxide NO:
Configuration-interaction studies}},
journal = JCP,
year = {1982},
volume = {77},
pages = {415-423},
abstract = {Large scale SCF and CI calculations have been performed on the ground
