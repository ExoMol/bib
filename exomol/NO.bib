@article{98YoEsPa.NO,
author = {Yoshino, K. and Esmond, J. R. and Parkinson, W. H. and Thorne, A. P.
and Murray, J. E. and Learner, R. C. M. and Cox, G. and Cheung, A. S.-C. and Leung, K. W.-S.
