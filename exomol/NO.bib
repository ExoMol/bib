@article{96LiDrBu.NO,
author = {Likens, G. E. and Driscoll, C. T. and Buso, D. C.},
title = {{Long-term effects of acid rain: Response and recovery of a forest ecosystem}},
journal = {Science},
year = {1996},
volume = {272},
pages = {244-246},
abstract = {Long-term data from the Hubbard Brook Experimental Forest,
New Hampshire, suggest that although changes in stream pH have been relatively small,
