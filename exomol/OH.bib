@article{ 21AuSp.OH,
Author = {Augustovicova, Lucie D. and Spirko, Vladimir},
Title = {{Radial molecular property functions of the A(2)Sigma(+) state of
   hydroxyl}},
Journal = JQSRT,
Year = {2021},
Volume = {266},
Abstract = {Effective (mass-dependent) potential energy curves of the A(2)Sigma(+)
   electronic states of the (OH)-O-16 and (OD)-O-16 isotopomers of the
