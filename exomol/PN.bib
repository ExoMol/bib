@article{ 12YaTaWa.PN,
Author = {Yamaguchi, Takahiro and Takano, Shuro and Watanabe, Yoshimasa and Sakai,
   Nami and Sakai, Takeshi and Liu, Sheng-Yuan and Su, Yu-Nung and Hirano,
   Naomi and Takakuwa, Shigehisa and Aikawa, Yuri and Nomura, Hideko and
   Yamamoto, Satoshi},
Title = {The 3 mm Spectral Line Survey toward the Lynds 1157 B1 Shocked Region.
   I. Data},
Year = {2012},
Volume = {64},
pages = {105-145},
Abstract = {We have conducted a spectral line survey of the 3 mm band with the 45 m
   telescope of Nobeyama Radio Observatory toward the L 1157 B1 shocked
   region, where the blue-shifted component of the bipolar outflow from the
   protostar IRAS 20386+6751 interacts with the ambient gas. The observed
   frequency ranges from 78.1 to 115.8 GHz. We have detected 129 spectral
   lines of 29 molecular species. In addition to various oxygen-bearing
   organic molecules such as CH3CHO, HCOOCH3, and HCOOH, we have detected a
   phosphorus-containing molecule PN, a nitrogen-bearing organic molecule
   NH2CHO, and a carbon-chain molecule CCS in the shocked region. These
   results clearly indicate that the L 1157 B1 shocked region is chemically
