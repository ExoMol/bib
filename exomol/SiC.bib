journal = {Chemical Physics},
pages = {213--222},
title = {{The Lowest Singlet, Triplet, and Quintuplet Electronic States of {{SiC}}}},
volume = {312},
year = {2005}
}

@article{04DeKaxx.SiC,
abstract = {The gas phase infrared emission spectrum of the A3{$Sigma-$}textendash
X3{$Pi$} electronic transition of SiC has been observed using a high
resolution Fourier transform spectrometer. Three bands
{$nu{'}-nu{''}$}=0textendash 1, 0textendash 0, and 1textendash 0 have
been observed in the 2770, 3723, and 4578cm-1 regions, where the
0textendash 1 and 0textendash 0 bands were observed for the first
time. The SiC radical was generated by a dc discharge in a flowing
mixture of hexamethyl disilane [(CH3)6Si2] and He. A total of 1074
rotational transitions assigned to the 0textendash 1, 0textendash 0,
and 1textendash 0 bands have been combined in a simultaneous analysis
