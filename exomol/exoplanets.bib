@article{ 11WiMaDa,
  author={Joshua N. Winn and Jaymie M. Matthews and Rebekah I. Dawson and Daniel Fabrycky and Matthew J. Holman and Thomas
Kallinger and Rainer Kuschnig and Dimitar Sasselov and Diana Dragomir and David B. Guenther and Anthony F. J.
