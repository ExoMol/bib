@article{ 12GiAiRo.exo,
Author = {Gibson, N. P. and Aigrain, S. and Roberts, S. and Evans, T. M. and
   Osborne, M. and Pont, F.},
Title = {A {Gaussian} process framework for modelling instrumental systematics:
