@article{17EvSiKa ,
Author = {Evans, Thomas M. and Sing, David K. and Kataria, Tiffany and Oyal,
   Jayesh G. and Nikolov, Nikolay and Wakeford, Hannah R. and Deming, Drake
   and Marley, Mark S. and Amundsen, David S. and Ballester, Gilda E. and
   Barstow, Joanna K. and Ben-Jaffel, Lotfi and Bourrier, Vincent and
   Buchhave, Lars A. and Cohen, Ofer and Ehrenreich, David and Munoz,
