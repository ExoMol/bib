@article{GENIUSH,
  author = {M\'{a}tyus, Edit and Czak\'{o}, G\'{a}bor and Cs\'{a}sz\'{a}r, Attila
	G.},
  title = {Toward black-box-type full- and reduced-dimensional variational (ro)vibrational
