@article{GRANADA,
  title = {{GRANADA: A Generic RAdiative traNsfer AnD non-LTE population algorithm}},
  journal = JQSRT,
  volume = {113},
  pages = {1771-1817},
  year = {2012},
  issn = {0022-4073},
  doi = {10.1016/j.jqsrt.2012.05.001},
  url = {https://www.sciencedirect.com/science/article/pii/S0022407312002427},
